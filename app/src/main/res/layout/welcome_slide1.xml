<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/common_page_bg"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="3.2"
            android:gravity="bottom|center_horizontal">

            <ImageView
                android:id="@+id/welcome_intro_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/bmi"
                android:scaleType="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_weight="1.4"
            android:gravity="center_horizontal|top"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcome_intro_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/welcome_one_title"
                    android:textColor="@color/contact_profile_darkBlue"
                    android:textSize="16sp"
                    android:textAppearance="@style/WelcomePagesTextFont"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/welcome_intro_subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/welcome_one_message"
                    android:textColor="@color/app_black_transparent"
                    android:textSize="13sp"
                    android:textAppearance="@style/WelcomePagesTextFont"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.4"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>